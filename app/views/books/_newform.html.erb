<h4>User info</h4>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <p><strong>name</strong><strong><%= user.name %></strong></p>
  <p><strong>introduction</strong><strong><%= user.introduction %></strong></p>
  <% if user.id == current_user.id %>
  <p><%= link_to "プロフィール", edit_user_path(user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>